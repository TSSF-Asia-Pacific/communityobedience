{# @var string lang #}
{# @var AbstractLanguage translation #}

<p class="rubric translatedBoilerplate" lang="{{ lang }}">
    {% trans into lang %}This offering of prayer is to be said daily, where possible in the context of Morning or Evening Prayer.{% endtrans %}
</p>
<p class="boilerplate translatedBoilerplate" lang="{{ lang }}">
    {{ translation.gloriaPatra|raw }}
</p>
<p class="boilerplate translatedBoilerplate" lang="{{ lang }}">
    {{ translation.openingPrayer|raw }}
</p>

{# Add the principle for the day of month. #}
{% for i in range(1, 31) %}
    <div id='principal_{{ lang }}_{{ i }}' class='principal' lang='{{ lang }}'>
        <p class='rubric'>{{ i == '31' ? translation.principleRubricTitleDay31 : translation.principleRubricTitleNormal }}</p>
        {% include "principle/principle#{i}.html.twig" %}
    </div>
{% endfor %}

<p class="rubric translatedBoilerplate" lang="{{ lang }}">{{ translation.dailyIntercessionPrayerTitle}}</p>

{# Add the daily intercession prayers for the day of the month #}
{% for i in range(1, 31) %}
    <div id='day_{{ lang }}_{{ i }}' class='day' lang='{{ lang }}'>
        {{ translation.getDailyPrayers(i) | raw | nl2br }}
        <hr>
        {% include "daily/day#{i}.html.twig" with translation.getDailyPrayersMembers(i) %}
        <hr>
    </div>
{% endfor %}

<p class="rubric translatedBoilerplate" lang="{{ lang }}">{{ translation.collectTitle }}</p>

<p class="boilerplate translatedBoilerplate" lang="{{ lang }}">{{ translation.communityPrayer|raw }}</p>

{% for i in range(0, 6) %}
<div id='collect_{{ lang }}_{{ i }}' class='collect' lang='{{ lang }}'>
    <p class='rubric'>
        {{ "collect-day-#{i}"|trans({}, 'messages', lang) }}
    </p>
    <p class='boilerplate'>
        {% include "collect/collect#{i}.html.twig" %} <strong>{% trans into lang %}amen{% endtrans %}</strong>
    </p>
</div>
{% endfor %}

<p class="rubric translatedBoilerplate" lang="{{ lang }}">{{ translation.either }}</p>

<p class="boilerplate translatedBoilerplate" lang="{{ lang }}">
    {{ translation.blessingOne|raw }}
</p>
<p class="rubric translatedBoilerplate" lang="{{ lang }}">{{ translation.orDot }}</p>
<p class="boilerplate translatedBoilerplate" lang="{{ lang }}">
    {{ translation.blessingTwo|raw }}
</p>

<p class="copyright  translatedBoilerplate" lang="{{ lang }}">* {{ translation.copyright|raw }}</p>